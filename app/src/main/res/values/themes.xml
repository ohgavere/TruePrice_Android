<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools" 
     >
	
	<!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarStyle" >@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
	
        <!-- Support library compatibility -->
        <item name="background">@drawable/bar_grey_background</item>

    </style>
 <!--         <item name="android:background">@drawable/actionbar_background</item> -->
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        
        <item name="android:textColor">@color/lightblue</item>        
        
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
<!--         <item name="android:textColor">@color/actionbar_text</item> -->

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
		<item name="android:background">@drawable/tab_indicator_ab_gentheme</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/tab_indicator_ab_gentheme</item>
    </style>
