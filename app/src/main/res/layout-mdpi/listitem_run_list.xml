<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_run_list_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#66CCCCCC"
	android:orientation="vertical"
	android:paddingLeft="8dp"
	android:paddingRight="6dp"
	android:paddingTop="2dp" >
	
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >

	<TextView
		android:id="@+id/run_list_item_label"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="28sp"
		android:textStyle="bold" />

</LinearLayout>	

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >
 
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:layout_weight="0"
    	android:text="Produits : "
    	android:textSize="16sp"
    	android:textStyle="bold" />

	<TextView
		android:id="@+id/run_list_item_nbprod"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="7"
		android:textSize="16sp"
		android:textStyle="bold" />
	
</LinearLayout>	

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >
	
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="Synchronisation : "
    	android:textSize="16sp"
    	android:textStyle="bold" />

    <TextView
    	android:id="@+id/run_list_item_date_sync"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="right"
    	android:textSize="16sp"
    	android:textStyle="bold" />
            
</LinearLayout>
	
	
</LinearLayout>
