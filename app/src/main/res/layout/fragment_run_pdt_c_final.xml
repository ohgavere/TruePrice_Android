<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/run_pdt_final_mainwrapper"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="top"
	android:layout_weight="1"
	android:orientation="vertical" >

	<ScrollView
		android:id="@+id/run_pdt_final_scrollwrapper"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="@android:color/transparent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="12dp"
                    android:gravity="center_horizontal|center_vertical" >

					<TextView
						style="@style/txt_label_stat"
						android:layout_width="match_parent"
						android:layout_height="32dp"
						android:layout_gravity="center_horizontal|center_vertical"
						android:gravity="center_horizontal"
						android:text="Resultats - Stats"
						android:textColor="#000000"
                        android:background="@drawable/metal_brosse_lightgray"/>
				</LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgnd_border_black"
                    android:padding="8dp"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="48dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:padding="0dp" >

                        <TextView
                            android:id="@+id/TextView03"
                            style="@style/txt_label_stat"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:text="Prix par"
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView02"
                            style="@style/txt_label_stat"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="prévu"
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView05"
                            style="@style/txt_label_stat"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="payé"
                            android:textSize="@dimen/dim_textsize_global" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView08"
                            style="@style/txt_label_stat"
                            android:layout_height="wrap_content"
                            android:text="U. vente    "
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView09"
                            style="@style/txt_label_stat_data"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kg"
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView07"
                            style="@style/txt_label_stat_data"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="1,2"
                            android:textSize="@dimen/dim_textsize_global" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:padding="0dp" >

                        <TextView
                            android:id="@+id/TextView10"
                            style="@style/txt_label_stat"
                            android:layout_height="match_parent"
                            android:text="U. mesure"
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView01"
                            style="@style/txt_label_stat_data"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Kg"
                            android:textSize="@dimen/dim_textsize_global" />

                        <TextView
                            android:id="@+id/TextView04"
                            style="@style/txt_label_stat_data"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="1,2"
                            android:textSize="@dimen/dim_textsize_global" />
                    </LinearLayout>

                </LinearLayout>


			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="12dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical" >

				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="12dp"
                    android:gravity="center_horizontal|center_vertical"
                    >

					<TextView
						style="@style/txt_label_stat"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/metal_brosse_lightgray"
                        android:gravity="center_horizontal"
						android:text="Resultats - Achat"
						android:textColor="#000000" />
				</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/backgnd_border_black"
                    android:padding="8dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/txt_label_stat"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="Qtt emportée" />

                        <EditText
                            style="@style/txt_label_stat_data"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/txt_label_stat"
                            android:layout_weight="1"
                            android:text="Prix TTC payé" />

                        <TextView
                            style="@style/txt_label_stat_data"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="7,84" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/txt_label_stat"
                            android:layout_weight="1"
                            android:text="Prix U.M. payé" />

                        <TextView
                            style="@style/txt_label_stat_data"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="3.27" />
                    </LinearLayout>

                    </LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="5"
		android:orientation="horizontal"
		android:padding="0dp" >

		<Button
			android:id="@+id/btn_pdt_final_lock"
			style="@style/btt_metal_lightgray"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/metal_brosse_lightgray"
			android:text="LOCK" />
	</LinearLayout>

</LinearLayout>